<div class="row">
    <div class="col-md-3">
        <%= image_tag('logotipo_cabralia.png') %>
    </div>
    <div class="col-md-9"> <br>
       <!-- <nav class="navbar navbar-light bg-light"> -->
            <form class="form-inline">
                <a class="btn btn-outline-info" href=<%=pagina_inicial_enquetes_path%> role="button">
                    Início
                </a> 
                <div style="padding-left: 10px;">
                    <a class="btn btn-outline-secondary" href=<%=new_choice_path%> role="button">
