                        </a>
                    </div>
                <% end %>
                <div style="padding-left: 600px">
                    <%= link_to('', destroy_user_session_path, method: :delete, class: 'btn btn-danger fa fa-sign-out', title: "SAIR") %>
                </div>
            </form>
